
<div class="container">
  <h1>
  <%= @recipe.name %>
  </h1>
  <div>
  <p>
  <strong> Preparation time:<%= @recipe.preparation_time %>
  </strong></p>
  <P><strong>Cooking time:
  <%= @recipe.cooking_time %>
  </strong></p>
  <p><strong><%= @recipe.description%></strong></p>
  </div>
  <hr>
    <div class="d-flex my-4 mx-auto justify-content-between w-50">
      <%# <%= link_to "Generate shopping list", shopping_list_index_path, class: "btn btn-outline-primary" %> %>
      <%= link_to "Add ingredient", new_recipe_recipe_food_path(@recipe.id) , class: "btn btn-outline-primary" %>
    </div>
  <hr>
  <table class="table table-striped text-center">
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
    </thead>
    <% @recipe_foods.each do |recipe_food| %>
      <%= render recipe_food %>
    <% end %>
  </table>
</div>



<h1>Recipes</h1>

<table class="table table-striped table-hover" data-toggle="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>preparation time</th>
          <th>cooking time</th>
          <th>description</th>
          </tr>
      </thead>
      <tbody>
        <% @recipes.each do |recipe| %>
          <tr>
            <td><%= recipe.name %></td>
            <td><%= recipe.preparation_time %></td>
            <td><%= recipe.cooking_time %></td>
            <td><%= recipe.description %></td>
             <td><%= button_to 'Delete', recipe_path(recipe.id), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
</table>